# Create pwd file
    f = open('passwords.txt', 'a')
    # get the random pwd
    rand_pwd = gen_random_pwd()
    # create all other pwd from the rand pwd
    for x in range(0, 99):
        hashed_pwd = hash_pwd(rand_pwd)
        # store to file
        f.write(hashed_pwd)
        rand_pwd = hashed_pwd

    # Close the file
    f.close()



